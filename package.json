{
  "name": "copilot-bar",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-html",
    "copy-html": "mkdir -p dist/renderer && cp src/renderer/index.html src/renderer/osd.html dist/renderer/ && cp -r assets dist/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "package-mac": "electron-builder --mac",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "build": {
    "appId": "com.github.copilotbar",
    "productName": "Copilot Bar",
    "directories": {
      "output": "release"
    },
    "mac": {
      "target": [
        {
          "target": "dmg",
          "arch": ["arm64", "x64"]
        }
      ],
      "category": "public.app-category.productivity"
    },
    "files": [
      "dist/**/*",
      "assets/**/*",
      "package.json"
    ]
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@github/copilot-sdk": "^0.1.16",
    "chart.js": "^4.4.0",
    "dotenv": "^17.2.3",
    "electron": "^28.0.0",
    "highlight.js": "^11.11.1",
    "koffi": "^2.15.1",
    "marked": "^17.0.1",
    "menubar": "^9.4.0",
    "papaparse": "^5.4.1",
    "sql.js": "^1.13.0",
    "xlsx": "^0.18.5"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/papaparse": "^5.3.14",
    "@types/sql.js": "^1.4.9",
    "@vitest/coverage-v8": "^3.2.4",
    "electron-builder": "^25.1.8",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
