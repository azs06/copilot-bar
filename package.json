{
  "name": "copilot-bar",
  "version": "1.0.0",
  "main": "dist/main/index.js",
  "type": "module",
  "scripts": {
    "build": "tsc && npm run copy-html",
    "copy-html": "mkdir -p dist/renderer && cp src/renderer/index.html dist/renderer/ && cp -r assets dist/",
    "start": "npm run build && electron .",
    "dev": "npm run build && electron .",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.975.0",
    "@github/copilot-sdk": "^0.1.16",
    "dotenv": "^17.2.3",
    "electron": "^28.0.0",
    "highlight.js": "^11.11.1",
    "koffi": "^2.15.1",
    "marked": "^17.0.1",
    "menubar": "^9.4.0",
    "sql.js": "^1.13.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/sql.js": "^1.4.9",
    "@vitest/coverage-v8": "^3.2.4",
    "typescript": "^5.0.0",
    "vitest": "^3.2.4"
  }
}
